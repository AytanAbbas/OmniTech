                //    e.stopPropagation();
                    //Swal.fire({
                    //    icon: 'warning',
                    //    title: 'Bu qəbz artıq kassaya göndərilib',
                    //});
                //});

            } else {
                stlineDataGrid.getCellElement(index, 6).css("background-color", "");
                stlineDataGrid.getCellElement(index, 7).css("background-color", "");
            }
        }
    }


   

    $("#knInvoiceInfoDataContainer").dxDataGrid({
